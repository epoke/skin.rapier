<window id="609">
	<defaultcontrol always="true">11</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<coordinates>
		<system>1</system>
		<origin x="758" y="44">true</origin>
	</coordinates>

	<controls>
		<control type="group">
			<include>PVRChannelsOSDDialogBox</include>
			<include>DialogOpenCloseAnim</include>	

			<control type="label">
				<description>Title</description>
				<width>400</width>
				<label>$LOCALIZE[19023] - $INFO[VideoPlayer.ChannelGroup]</label>
				<include>DialogTitle</include>
			</control>

			<control type="group">
				<posx>DialogMarginOffsetX</posx>
				<posy>DialogMarginOffsetY</posy>

				<control type="list" id="11">
					<width>430</width>
					<height>518</height>
					<onleft>-</onleft>
					<onright>-</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<pagecontrol>70</pagecontrol>
					<preloaditems>2</preloaditems>
					<scrolltime tween="sine" easing="inout">300</scrolltime>
					<itemlayout height="74">
						<control type="image">
							<posx>0</posx>
							<width>430</width>
							<height>74</height>	
							<texture border="0,0,10,2">views/list-separator.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>

						<control type="image">
							<description>Cover</description>
							<width>73</width>
							<height>73</height>
							<bordertexture border="7">covers/cover-case-nofocus.png</bordertexture>
							<bordersize>5</bordersize>
							<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>

						<control type="label">
							<description>Label</description>
							<posx>80</posx>
							<posy>22</posy>
							<width>272</width>
							<font>ListFont</font>
							<textcolor>ListColor</textcolor>
							<shadowcolor>ShadowColor</shadowcolor>
							<label>$INFO[ListItem.Title]</label>
							<aligny>center</aligny>
							<scroll>yes</scroll>
						</control>

						<control type="label">
							<description>Label2</description>
							<posx>80</posx>
							<posy>47</posy>
							<width>272</width>
							<font>ListFont2</font>
							<textcolor>ListColor2</textcolor>
							<shadowcolor>ShadowColor</shadowcolor>
							<aligny>center</aligny>				
							<label>$INFO[ListItem.ChannelNumber] - $INFO[ListItem.Label]</label>
						</control>

						<control type="group">
							<description>Progress</description>
							<posx>390</posx>
							<posy>25</posy>
							<include>LiveTVProgressImage</include>
						</control>
					</itemlayout>

					<focusedlayout height="74">	
						<control type="image">
							<posx>0</posx>
							<width>430</width>
							<height>74</height>	
							<texture border="0,0,10,2">views/list-separator.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>

						<control type="image">
							<posx>0</posx>
							<width>430</width>
							<height>73</height>
							<texture border="4">views/list-focus.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>Control.HasFocus(11)</visible>
							<include>ListViewSelectFadeAnim</include>
							<include condition="!Skin.HasSetting(DisableListScrollAnim)">ListViewScrollAnim</include>
						</control>

						<control type="image">
							<posx>0</posx>
							<width>430</width>
							<height>73</height>
							<texture border="4">views/list-alt-focus.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>!Control.HasFocus(11)</visible>
							<include>ListViewSelectFadeAnim2</include>
						</control>

						<control type="group">
							<include condition="!Skin.HasSetting(DisableListFocusAnim)">ListViewFocusAnim</include>
							<control type="image">
								<description>Cover</description>
								<width>73</width>
								<height>73</height>
								<bordertexture border="7">covers/cover-case-nofocus.png</bordertexture>
								<bordersize>5</bordersize>
								<texture background="true" fallback="DefaultVideo.png">$INFO[ListItem.Icon]</texture>
								<aspectratio>keep</aspectratio>
								<include condition="!Skin.HasSetting(DisableListFocusAnim)">ListViewCoverFocusAnim</include>
							</control>

							<control type="label">
								<description>Label</description>
								<posx>80</posx>
								<posy>22</posy>
								<width>272</width>
								<font>ListFont</font>
								<textcolor>SelectedColor</textcolor>
								<shadowcolor>ShadowColor</shadowcolor>
								<label>$INFO[ListItem.Title]</label>
								<aligny>center</aligny>
								<scroll>yes</scroll>
							</control>

							<control type="label">
								<description>Label2</description>
								<posx>80</posx>
								<posy>47</posy>
								<width>272</width>
								<font>ListFont2</font>
								<textcolor>ListColor2</textcolor>
								<shadowcolor>ShadowColor</shadowcolor>
								<aligny>center</aligny>				
								<label>$INFO[ListItem.ChannelNumber] - $INFO[ListItem.Label]</label>
							</control>

							<control type="group">
								<description>Progress</description>
								<posx>390</posx>
								<posy>25</posy>
								<include>LiveTVProgressImage</include>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</controls>
</window>