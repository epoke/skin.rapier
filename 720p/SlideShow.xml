<window id="2007">
	<defaultcontrol>2</defaultcontrol>
	
	<controls>
		<control type="group">		
			<visible>Player.ShowInfo + Player.HasAudio</visible>
			
			<control type="image">
				<posx>28</posx>
				<posy>-10</posy>
				<width>1224</width>
				<height>140</height>
				<texture border="8">panels/panel.png</texture>
			</control>
			
			<include>FSTopPanelOpenCloseAnim</include>
			
			<control type="grouplist">
				<posx>875</posx>
				<posy>0</posy>
				<height>43</height>
				<width>350</width>
				<usecontrolcoords>true</usecontrolcoords>
				<orientation>horizontal</orientation>
				<align>right</align>
				<control type="label">
					<posx>-4</posx>
					<posy>22</posy>
					<width min="25" max="250">auto</width>
					<font>FSInfoTitleFont</font>
					<textcolor>BreadCrumbColor</textcolor>
					<label>$INFO[System.Time]</label>
					<aligny>center</aligny>
				</control>
			</control>
			
			<control type="image">
				<description>Cover</description>
				<posx>55</posx>
				<posy>11</posy>
				<width>104</width>
				<height>104</height>
				<bordertexture border="8">panels/panel-content-border.png</bordertexture>
				<texture diffuse="covers/player-album-cover-border.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<control type="group">			
				<posx>179</posx>
				
				<control type="grouplist">
					<posy>5</posy>
					<width>862</width>
					<height>50</height>
					<itemgap>15</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<control type="label">
						<description>Title</description>
						<width min="50" max="752">auto</width>
						<height>50</height>
						<font>FSInfoTitleFont</font>
						<textcolor>MediaInfoTitleColor</textcolor>
						<label>[UPPERCASE]$INFO[MusicPlayer.Title][/UPPERCASE]</label>
						<scroll>yes</scroll>
					</control>
					<control type="image">
						<description>Star Rating</description>
						<posy>2</posy>
						<width>100</width>
						<height>32</height>		
						<texture>$INFO[Player.StarRating]</texture>
						<aspectratio align="left">keep</aspectratio>
						<include>StarRatingFadeAnim</include>
					</control>
				</control>
				
				<control type="label">
					<description>Genre</description>
					<posy>35</posy>
					<width>862</width>
					<font>FSInfoFont</font>
					<textcolor>MediaInfoTitleColor2</textcolor>
					<label>[UPPERCASE]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ,]$INFO[MusicPlayer.Year, (,)][/UPPERCASE]</label>
				</control>

				<control type="grouplist">
					<description>Media Flags Area</description>
					<posy>75</posy>
					<width>862</width>
					<height>35</height>
					<itemgap>5</itemgap>
					<align>left</align>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<include>MediaFlagFadeAnim</include>
					<include>PlayerAudioMediaFlags</include>
				</control>
			</control>
			
			<control type="label">
				<description>Party Mode</description>
				<posx>1225</posx>
				<posy>67</posy>
				<width>350</width>
				<font>FSInfoFont2</font>
				<textcolor>DefaultColor3</textcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[589]</label>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
				
			<control type="grouplist">
				<description>Next Track</description>
				<posx>725</posx>
				<posy>89</posy>
				<width>500</width>
				<align>right</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<width min="10" max="500">auto</width>
					<font>FSInfoFont2</font>
					<textcolor>MediaInfoItemColor</textcolor>
					<label>$LOCALIZE[209]:</label>
				</control>
				<control type="label">
					<width min="10" max="500">auto</width>
					<font>FSInfoFont2</font>
					<textcolor>MediaInfoItemColor2</textcolor>
					<label>$INFO[MusicPlayer.offset(1).Artist] $INFO[MusicPlayer.offset(1).Title,- ]</label>
					<scroll>yes</scroll>
				</control>
			</control>
		</control>
	</controls>
</window>