<window>
	<defaultcontrol>-</defaultcontrol>
	
	<controls>	
		<control type="group">
			<description>Video Info Panel</description>
			<posx>28</posx>
			<posy>350</posy>
			<visible>![Window.IsActive(OSDVideoSettings) | Window.IsActive(OSDAudioSettings) | Window.IsActive(VideoBookmarks)
			| Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide)]</visible>
			<include>FSMediaInfoPanel</include>
			<include>FSMediaInfoOpenCloseAnim</include>

			<control type="group">			
				<posx>18</posx>
				<posy>10</posy>
				
				<control type="grouplist">
					<width>820</width>
					<height>60</height>
					<orientation>horizontal</orientation>
					<itemgap>10</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<description>Title/Year</description>
						<width min="10" max="710">auto</width>
						<height>60</height>
						<font>FSInfoTitleFont</font>
						<textcolor>MediaInfoTitleColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>[UPPERCASE]$INFO[VideoPlayer.Title]$INFO[VideoPlayer.Year, (,)][/UPPERCASE]</label>
						<aligny>top</aligny>
						<scroll>yes</scroll>
					</control>
					<control type="image">
						<description>Star Rating</description>
						<posy>2</posy>
						<width>100</width>
						<height>32</height>		
						<texture>$INFO[Player.StarRating]</texture>
						<aspectratio>keep</aspectratio>
						<include>StarRatingFadeAnim</include>
					</control>
				</control>

				<control type="label">
					<description>Genre</description>
					<posy>30</posy>
					<width>820</width>
					<height>26</height>
					<font>FSInfoFont</font>
					<textcolor>MediaInfoTitleColor2</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<label>[UPPERCASE]$VAR[FSInfoLabel1][/UPPERCASE]</label>
					<aligny>center</aligny>
				</control>
				
				<control type="grouplist">
					<description>Time</description>
					<posx>868</posx>
					<width>320</width>
					<align>right</align>
					<orientation>horizontal</orientation>
					<itemgap>10</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image">
						<posy>6</posy>
						<width>24</width>
						<height>24</height>	
						<texture>pvr/status_timer_alt.png</texture>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<posx>-6</posx>
						<height>60</height>	
						<width min="25" max="250">auto</width>
						<font>FSInfoTitleFont</font>
						<textcolor>BreadCrumbColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>[UPPERCASE]$INFO[System.Time][/UPPERCASE]</label>
						<aligny>top</aligny>
					</control>
				</control>
		
				<control type="grouplist">
					<description>Chapter</description>
					<posx>788</posx>
					<posy>30</posy>
					<width>400</width>
					<align>right</align>
					<orientation>horizontal</orientation>
					<visible>Player.ChapterCount</visible>
					<control type="label">
						<width min="10" max="110">auto</width>
						<height>26</height>
						<font>FSInfoFont2</font>
						<textcolor>MediaInfoItemColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>[UPPERCASE]$LOCALIZE[21396]:[/UPPERCASE]</label>
						<aligny>center</aligny>
					</control>
					<control type="label">
						<width min="10" max="400">auto</width>
						<height>26</height>
						<font>FSInfoFont2</font>
						<textcolor>MediaInfoItemColor2</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>[UPPERCASE]$INFO[Player.Chapter]$INFO[Player.ChapterCount, / ]$INFO[Player.ChapterName, - ,][/UPPERCASE]</label>
						<aligny>center</aligny>
						<scroll>yes</scroll>
					</control>
				</control>
				
				<control type="grouplist">
					<description>Media Info Labels</description>
					<posy>66</posy>
					<width>820</width>
					<orientation>horizontal</orientation>
					<control type="label">
						<width min="10" max="110">auto</width>
						<height>40</height>
						<font>MediaInfoFont</font>
						<textcolor>MediaInfoItemColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>							
						<label>$VAR[FSInfoLabel2]</label>
						<aligny>center</aligny>
					</control>
					<control type="label">
						<width min="10" max="320">auto</width>
						<height>40</height>
						<font>MediaInfoFont</font>
						<textcolor>MediaInfoItemColor2</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label fallback="31001">$VAR[FSInfoLabel2Val]</label>
						<aligny>center</aligny>
					</control>
					<control type="label">
						<width min="10" max="110">auto</width>
						<height>40</height>
						<font>MediaInfoFont</font>
						<textcolor>MediaInfoItemColor</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label>     $VAR[FSInfoLabel3]</label>
						<aligny>center</aligny>
					</control>
					<control type="label">
						<width min="10" max="320">auto</width>
						<height>40</height>
						<font>MediaInfoFont</font>
						<textcolor>MediaInfoItemColor2</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<label fallback="31001">$VAR[FSInfoLabel3Val]</label>
						<aligny>center</aligny>
					</control>
				</control>

				<control type="textbox">
					<description>Plot</description>
					<posy>105</posy>
					<width>820</width>
					<height>100</height>
					<font>MediaInfoDescFont</font>
					<textcolor>MediaInfoColor</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<align>justify</align>
					<label fallback="31203">$INFO[VideoPlayer.Plot]</label>
					<wrapmultiline>true</wrapmultiline>
					<autoscroll time="2000" delay="6000" repeat="10000">true</autoscroll>
				</control>
			
				<control type="grouplist">
					<description>Media Flags Area</description>
					<posy>214</posy>
					<width>890</width>
					<height>35</height>
					<itemgap>5</itemgap>
					<align>left</align>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<include>MediaFlagFadeAnim</include>
					<include>PlayerVideoMediaFlags</include>
					<include>PlayerAudioMediaFlags</include>
					<include>PlayerRatingMediaFlags</include>
				</control>
			</control>

			<control type="image">
				<description>Cover</description>
				<posx>983</posx>
				<posy>92</posy>
				<width>210</width>
				<height>167</height>
				<texture diffuse="covers/player-media-cover-diffuse.png">$INFO[VideoPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
				<visible>![Skin.HasSetting(ShowTVShowClearArtOSD) + VideoPlayer.Content(Episodes)]</visible>
			</control>
			
			<control type="group">
				<visible>Skin.HasSetting(ShowTVShowClearArtOSD) + VideoPlayer.Content(Episodes)</visible>
				
				<control type="image">
					<description>Cover</description>
					<posx>983</posx>
					<posy>92</posy>
					<width>210</width>
					<height>167</height>
					<texture diffuse="covers/player-media-cover-diffuse.png">$INFO[Player.FolderPath]clearart.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				
				<control type="image">
					<description>Cover</description>
					<posx>983</posx>
					<posy>92</posy>
					<width>210</width>
					<height>167</height>
					<texture diffuse="covers/player-media-cover-diffuse.png">$INFO[Player.FolderPath]../clearart.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				
				<control type="image">
					<description>Cover</description>
					<posx>983</posx>
					<posy>92</posy>
					<width>210</width>
					<height>167</height>
					<texture diffuse="covers/player-media-cover-diffuse.png">$INFO[Player.FolderPath]../../clearart.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				
				<control type="image">
					<description>Cover</description>
					<posx>983</posx>
					<posy>92</posy>
					<width>210</width>
					<height>167</height>
					<texture diffuse="covers/player-media-cover-diffuse.png">$INFO[Player.FolderPath]../../../clearart.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>
		</control>
	</controls>
</window>