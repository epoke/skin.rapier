<window id="600">
	<defaultcontrol>32</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload condition="IsEmpty(Skin.String(ViewsPVR))">Skin.SetString(ViewsPVR,1)</onload>

	<controls>
		<control type="group">	
			<include>BackgroundDefault</include>
			<include condition="[!IsEmpty(Skin.String(CustomPVRBGPath)) + [Skin.String(CustomPVRBGType,2) | Skin.String(CustomPVRBGType,3)]]
			+ Skin.HasSetting(ApplyAllPVRCustomBG)">BackgroundPVR</include>
			<include>BackgroundOpenCloseAnim</include>	
		</control>

		<include>LiveTVListInfoArea</include>		
		<include>LiveTVColumnInfoArea</include>

		<control type="group" id="50">
			<include>MediaInfoOpenCloseAnim</include>
			<include>LiveTVEPGTimelineView</include> <!-- view id = 10 -->
			<include>LiveTVChannelView</include> <!-- view id = 11 -->
			<include>LiveRadioChannelView</include> <!-- view id = 12 -->
			<include>LiveTVRecordingsView</include> <!-- view id = 13 -->
			<include>LiveTVTimersView</include> <!-- view id = 14 -->
			<include>LiveTVGuideChannelView</include> <!-- view id = 15 -->
			<include>LiveTVGuideNowNextView</include> <!-- view id = 16 -->
			<include>LiveTVSearchView</include> <!-- view id = 17 -->
		</control>

		<include>PVRMenuBar</include>

		<control type="group">
			<description>Top Bar Area</description>
			<include>TopBarImage</include>
			<include>TopBarOpenCloseAnim</include>
			<include>BreadCrumbPVR</include>
			<include>Notifications</include>
		</control>
	</controls>
</window>
